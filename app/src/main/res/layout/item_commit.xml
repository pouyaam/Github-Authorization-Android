<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="commitDetail"
            type="com.mydigipay.challenge.data.models.CommitDetail" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/itemCommit_avatar"
            imageUrl="@{commitDetail.committer.avatarUrl}"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/github_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemCommit_message_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@{commitDetail.commit.message}"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemCommit_avatar"
            app:layout_constraintTop_toTopOf="@id/itemCommit_avatar"
            tools:text="Commit Message" />

        <TextView
            android:id="@+id/itemRepo_desc_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{@string/commitedBy(commitDetail.commit.author.name)}"
            android:textColor="@color/greyTextColor"
            app:layout_constraintStart_toEndOf="@id/itemCommit_avatar"
            app:layout_constraintTop_toBottomOf="@id/itemCommit_message_tv"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Repo Desc" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separatorLine"
            app:layout_constraintTop_toBottomOf="@id/itemRepo_desc_tv"
            android:layout_marginTop="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
